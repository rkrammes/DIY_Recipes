{
  "name": "modern-diy-recipes",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    
    "# Consolidated Scripts": "----------",
    "server": "chmod +x ./server.sh && ./server.sh",
    "server:dev": "chmod +x ./server.sh && ./server.sh --mode=standard",
    "server:minimal": "chmod +x ./server.sh && ./server.sh --mode=minimal",
    "server:formula": "chmod +x ./server.sh && ./server.sh --mode=formula",
    "server:document": "chmod +x ./server.sh && ./server.sh --mode=document",
    "server:with-api": "chmod +x ./server.sh && ./server.sh --with-api",
    "server:with-font": "chmod +x ./server.sh && ./server.sh --with-font-server",
    "server:full": "chmod +x ./server.sh && ./server.sh --with-api --with-font-server",
    "server:stop": "chmod +x ./server.sh && ./server.sh --stop",
    "server:restart": "chmod +x ./server.sh && ./server.sh --restart",
    
    "test:runner": "chmod +x ./test-runner.sh && ./test-runner.sh",
    "test:unit": "chmod +x ./test-runner.sh && ./test-runner.sh --test=unit",
    "test:e2e": "chmod +x ./test-runner.sh && ./test-runner.sh --test=e2e",
    "test:formulations": "chmod +x ./test-runner.sh && ./test-runner.sh --test=formulations",
    "test:layouts": "chmod +x ./test-runner.sh && ./test-runner.sh --test=layout --with-server",
    "test:coverage": "chmod +x ./test-runner.sh && ./test-runner.sh --coverage",
    
    "# Legacy Scripts": "----------",
    "setup-supabase-mcp": "node copy-supabase-mcp-server.js",
    "start-supabase-mcp": "node start-supabase-mcp.js",
    "dev-with-mcp": "node dev-with-mcp.js",
    "verify-mcp": "node verify-mcp-setup.js",
    "start-basic-server": "node basic-server.js",
    "start-mcp-proxy": "node start-supabase-mcp-proxy.js",
    "test": "node run-all-tests.js",
    "test:puppeteer": "node test-app-with-puppeteer.js",
    "test:integration": "node test-context7-puppeteer.js",
    "dev:context7": "chmod +x ./start-with-context7.sh && ./start-with-context7.sh",

    "# MCP Integration": "----------",
    "mcp:context7": "chmod +x ./server.sh && ./server.sh --with=context7",
    "mcp:memory": "chmod +x ./server.sh && ./server.sh --with=memory",
    "mcp:supabase": "chmod +x ./server.sh && ./server.sh --with=supabase,context7",
    
    "# Utilities": "----------",
    "db:setup": "node run-database-setup.js",
    "db:supabase-setup": "node run-supabase-setup.js",
    "clean": "rm -rf .next && rm -rf node_modules/.cache"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.49.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.9.4",
    "http-proxy-middleware": "^3.0.5",
    "next": "15.3.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/node": "^20.17.32",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/testing-library__react": "^10.0.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.3.0",
    "jest-image-snapshot": "^6.4.0",
    "tailwindcss": "^3.4.1",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5"
  }
